<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/white"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BongoShop"
        android:textSize="20sp"
        android:textColor="#FF0080"
        android:textStyle="bold"
        android:layout_marginBottom="20px"
        android:padding="20px"
        />

    <ImageView
        android:id="@+id/my_featured_image"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cover"
        tools:ignore="ContentDescription,MissingConstraints" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20"
        android:layout_marginTop="20px">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="10">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="All Category"
             android:textSize="20sp"
             android:textColor="#FF0080"
             android:textStyle="bold"
             android:layout_marginBottom="20px"
             android:padding="20px"
             />
     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="10">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="See All"
                android:textAlignment="viewEnd"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="20px"
                android:padding="20px"
                />
        </LinearLayout>


    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:weightSum="30"
        android:layout_marginTop="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/skincare"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/frag"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="10">
            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/mom"
                />
        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="30"
        android:layout_marginTop="20px">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/cleanc"
                    android:paddingBottom="10px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clean And Clear Foaming "
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textAlignment="gravity"
                    android:background="@color/white">
                </TextView>


            </LinearLayout>

          <Button
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:text="Buy Now">
          </Button>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/fashw"
                    android:paddingBottom="10px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rajkonna Acne Fighting Facial"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textAlignment="gravity"
                    android:background="@color/white">
                </TextView>


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Buy Now">
            </Button>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_weight="10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:src="@drawable/oilh"
                    android:paddingBottom="10px"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hawaa Hair Fall Avenger Oil"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textAlignment="gravity"
                    android:background="@color/white">
                </TextView>


            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Buy Now">
            </Button>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>